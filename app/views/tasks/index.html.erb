<table class="table">
  <thead>
    <tr>
      <th colspan="3" class="h4">タスク</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |t| %>
      <tr>
        <td><%= t.task %></td>
        <td>
          <%= link_to "編集", task_edit_path(t), class:"btn btn-primary" %>
        </td>
        <td>
          <%= link_to "削除", task_delete_path(t), method: :delete, data: {confirm: "本当に削除しますか？"}, class:"btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>